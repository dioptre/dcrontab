{
    "ClusterID": 128,
    "Addresses": [
        "172.17.0.1:63001",
		"localhost:63002",
		"localhost:63003"
    ],
    "Debug": true,
    "UseLocalTLS": true,
    "TLSCert" : "./keys/example/server.crt",
    "TLSKey" : "./keys/example/server.key",
    "TLSCACert" : "./keys/example/ca.crt",
    "NatsService": {
        "Service": "nats",
        "Hosts": [
            "tls://localhost:4222"
        ],
        "Context": "toc.track.notify",
        "Secure": true,
        "CACert": "./keys/staging/rootCa.crt",
        "Cert": "./keys/staging/nats-client.crt",
        "Key": "./keys/staging/nats-client.key",
        "Format": "json"
    },
    "Commands": [
        {
            "Type": "shell",
            "Exec" : "ls",
            "Args" : "-al",
            "Timeout" : 300,            
            "Secure": false,
            "Retry": 0,
            "Critical" : false,
            "Cron": {
                "Minute" : "*",
                "Hour" : "*",
                "Day" : "*",
                "Month" : "*",
                "Weekday" : "*",
                "Once": false
            },
            "Comment" : "Demo command runs every minute"
        },
        {
            "Type": "nats",
            "Exec" : "system.check",
            "Args" : "{'ok':true}",
            "Timeout" : 3000,            
            "Secure": false,
            "Retry": 3,
            "Critical" :true
        }
    ]
}
